set_std_mode() {
  if [ "$VERB" = "yes" ]; then
    STD=""
  else
    STD="silent"
  fi
}

# Silent execution function
silent() {
  if [ "$VERB" = "no" ]; then
    "$@" >/dev/null 2>&1 || return 1
  else
    "$@" || return 1
  fi
}